# Font Identifier Production Configuration

# ======================
# APPLICATION SETTINGS
# ======================
APP_NAME=Font Identifier
VERSION=1.0.0
ENVIRONMENT=production

# Logging
LOG_LEVEL=WARNING

# ======================
# SERVER
# ======================
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true
STREAMLIT_SERVER_FILE_WATCHER_TYPE=none
STREAMLIT_SERVER_RUN_ON_SAVE=false

# ======================
# SECURITY - CHANGE THESE IN PRODUCTION!
# ======================
SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-USE-RANDOM-64-CHAR-STRING
SESSION_TIMEOUT_HOURS=12

# ======================
# DATABASE
# ======================
# For PostgreSQL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/font_identifier_prod

# For SQLite (development only)
# DB_PATH=app_users_prod.db

# ======================
# MODEL
# ======================
MODEL_PATH=model.pth
MODEL_DEVICE=cpu
MODEL_CONFIDENCE_THRESHOLD=0.7

# ======================
# RECORDING
# ======================
RECORDINGS_DIR=/app/recordings
MAX_FILE_SIZE_MB=100

# ======================
# PAYMENT INTEGRATION
# ======================
PAYMENT_ENABLED=true

# Stripe (Production)
STRIPE_PUBLIC_KEY=pk_live_your_key_here
STRIPE_SECRET_KEY=sk_live_your_key_here

# PayPal (Production)
PAYPAL_CLIENT_ID=your_production_client_id
PAYPAL_CLIENT_SECRET=your_production_client_secret
PAYPAL_MODE=live

# ======================
# EMAIL NOTIFICATIONS
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# ======================
# CLOUD STORAGE (AWS S3)
# ======================
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=font-identifier-production
AWS_REGION=us-east-1

# ======================
# MONITORING & ANALYTICS
# ======================
# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_BURST=10
